<div class="core-base-sheet">
  <div class="event-preview">
    <!-- Need to figure out this one -->
  </div>
  <div class="core-right-primary-raised-sheet">
    <%= form_for @event, :html => { :multipart => true } do |f| %>
        
      <%= f.label :organization, class: "core-form-label" %>
      <%= f.collection_select :organization_id, current_user.organizations, :id, :name %>

      <%= label_tag :flyer_url, 'Flyer/Poster', class: "core-form-label" %>
      <%= f.file_field :flyer_url %>

      <%= f.label :name, class: "core-form-label" %>
      <%= f.text_field :name, class: "core-form-text-input" %>

      <%= f.label :summary, class: "core-form-label" %>
      <%= f.text_area :summary, :rows => 2, :class => "core-form-textarea" %>

      <%= f.label :description, class: "core-form-label" %>
      <%= f.text_area :description, :class => "core-form-textarea" %>

      <%= f.label :location, class: "core-form-label" %>
      <%= f.text_field :location, class: "core-form-text-input" %>

      <%= f.label :url, class: "core-form-label" %>
      <%= f.text_field :url, class: "core-form-text-input" %>

      <%= f.label :event_start, "Start time (EST)", class: "core-form-label" %>
      <%= f.datetime_select :event_start %>

      <%= f.label :event_end, "End time (EST)", class: "core-form-label" %>
      <%= f.datetime_select :event_end %>

      <!-- todo: categories -->
      <% Category.all().each do |c| %>
        <%= label_tag c.name, c.name, class: "core-form-label" %>
        <%= check_box_tag "event[categories][]", c.name, @event.categories.exists?(:name => c.name), {:class => "core-checkbox", :id => c.name} %>
      <% end %>
    </div>

    <div class="core-form-action-group-strip">
      <%= f.submit %>
    </div>

  <% end %>
</div>
